---
import Card from "../components/Card.astro";
import Layout from "../layouts/Layout.astro";
const alquiler = "/webp/imagen 4-01.webp";
const geotecnia = "/webp/imagen 3-01.webp";
const infraestructura = "/webp/imagen 1-01.webp";
const header = "/1.svg";
const bgImgae = "/6.svg";
const mantenimiento = "/webp/imagen 2-01.webp";
const landingDesign = "/LANDING RG PERUMIN.svg";

const infraList = [
  { nombre: "Obras Civiles", link: "/obras-civiles" },
  { nombre: "Movimientos de Tierra", link: "/movimientos-de-tierra" },
  { nombre: "Estructuras Metálicas", link: "/estructuras-metálicas" },
  { nombre: "Montajes industriales", link: "/montajes-industriales" },
];
---

<Layout>
  <!-- Hero Section Rediseñado -->
  <section class="relative overflow-hidden">
    <img src={header} alt="Landing Design" class="w-full h-full object-cover" />
  </section>

  <section class="grid grid-cols-7 w-full h-[850px] mt-8 px-8 z-90">
    <div class="grid grid-rows-2 col-span-4 items-center">
      <h1 class="text-5xl font-altone pl-16">
        Soluciones en <br /><span class="font-altone-bold text-cyan"
          >ingeniería y <br /> construcción</span
        >
      </h1>
      <section
        class="cyan text-white h-full justify-center flex flex-col py-8 pl-16 pr-16 rounded-tl-[64px] rounded-bl-[64px]"
      >
        <h2 class="font-altone-bold text-3xl">Infraestructura</h2>
        <ul class="gap-4 flex flex-col mt-4 text-xl">
          {
            infraList.map((item) => (
              <li class="bg-white text-black font-altone py-2 px-4 rounded-full">
                {item.nombre}
              </li>
            ))
          }
        </ul>
      </section>
    </div>
    <span class="relative col-span-3">
      <img
        src={infraestructura}
        alt="Landing Design"
        class="w-full h-full object-cover rounded-tl-[128px] rounded-br-[128px] absolute block right-8 bottom-0 object-right-top"
      />
    </span>
  </section>

  <section class="grid grid-cols-7 w-full mt-20 px-8 z-10 relative">
    <span class="col-span-3 grid grid-rows-2">
      <span class="row-span-1 bg-stone-50"> </span>
      <span class="row-span-1 deep-purple relative">
        <img
          src={geotecnia}
          alt="Landing Design"
          class="w-full h-[618px] object-cover rounded-tl-[128px] rounded-br-[128px] absolute block left-0 bottom-0 object-left"
        />
      </span>
    </span>
    <div class="grid grid-rows-2 col-span-4 items-center">
      <h1 class="text-5xl font-altone pl-16"></h1>
      <section
        class="deep-purple text-white py-8 pr-16 pl-10 rounded-tr-[64px] rounded-br-[64px]"
      >
        <h2 class="font-altone-bold text-3xl">Geotecnia</h2>
        <ul class="gap-4 flex flex-col mt-4 text-xl">
          {
            infraList.map((item) => (
              <li class="bg-white text-black font-altone py-2 px-4 rounded-full">
                {item.nombre}
              </li>
            ))
          }
        </ul>
      </section>
    </div>
  </section>

  <section class="grid grid-cols-7 w-full mt-20 px-8 z-10 relative">
    <div class="grid grid-rows-2 col-span-4 items-center">
      <h1 class="text-5xl font-altone pl-16"></h1>
      <section
        class="soft-purple text-white py-8 pl-16 pr-16 rounded-tl-[64px] rounded-bl-[64px]"
      >
        <h2 class="font-altone-bold text-3xl">Infraestructura</h2>
        <ul class="gap-4 flex flex-col mt-4 text-xl">
          {
            infraList.map((item) => (
              <li class="bg-white text-black font-altone py-2 px-4 rounded-full">
                {item.nombre}
              </li>
            ))
          }
        </ul>
      </section>
    </div>
    <span class="col-span-3 relative">
      <img
        src={mantenimiento}
        alt="Landing Design"
        class="w-full h-[618px] object-cover rounded-tl-[128px] rounded-br-[128px] absolute block right-8 bottom-0 object-right"
      />
    </span>
  </section>

  <section class="grid grid-cols-7 w-full mt-20 px-8 z-10 relative">
    <span class="col-span-3 grid grid-rows-2">
      <span class="row-span-1 bg-stone-50"> </span>
      <span class="row-span-1 deep-purple relative">
        <img
          src={alquiler}
          alt="Landing Design"
          class="w-full h-[618px] object-cover rounded-tl-[128px] rounded-br-[128px] absolute block left-0 bottom-0 object-left"
        />
      </span>
    </span>
    <div class="grid grid-rows-2 col-span-4 items-center">
      <h1 class="text-5xl font-altone pl-16"></h1>
      <section
        class="deep-purple text-white py-8 pr-16 pl-10 rounded-tr-[64px] rounded-br-[64px]"
      >
        <h2 class="font-altone-bold text-3xl">Infraestructura</h2>
        <ul class="gap-4 flex flex-col mt-4 text-xl">
          {
            infraList.map((item) => (
              <li class="bg-white text-black font-altone py-2 px-4 rounded-full">
                {item.nombre}
              </li>
            ))
          }
        </ul>
      </section>
    </div>
  </section>

  <section class="grid grid-cols-3 w-full p-8 z-10 relative">
    <span class="col-span-1"></span>
    <a
      href="/juegos"
      class="col-span-2 deep-blue text-3xl font-altone-bold text-white pl-10 py-2 rounded-full"
      >Juegos y dinámicas</a
    >
  </section>
</Layout>
