---
import Card from "../components/Card.astro";
import Layout from "../layouts/Layout.astro";
const alquiler = "/5.svg";
const geotecnia = "/3.svg";
const infraestructura = "/2.svg";
const header = "/1.svg";
const bgImgae = "/6.svg";
const mantenimiento = "/4.svg";
---

<Layout>
  <div class="relative top-0 w-dvw left-0 -z-10">
    <section class="relative overflow-hidden">
      <span
        class="absolute bg-gradient-to-t from-[#102636] via-transparent to-transparent z-10 w-full h-full"
      ></span>
      <img
        src={header}
        alt="header"
        class="object-fill w-full object-center -z-10"
        
        loading="eager"
      />
    </section>
  </div>
  <section
    class="flex flex-col gap-4 xl:px-64 lg:px-48 px-10 pb-48 deep-blue z-90 relative w-dvw"
  >
    <section class="grid grid-cols-5 h-2/4 mt-12 mb-8">
      <div class="lg:col-span-3 col-span-full md:col-span-3 grid grid-rows-2">
        <div class="text-white items-center justify-center flex flex-col relative">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width={3}
            stroke="currentColor"
            class="size-[500px] absolute -left-44 opacity-25 text-cyan -z-10"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="m8.25 4.5 7.5 7.5-7.5 7.5"></path>
          </svg>

          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width={3}
            stroke="currentColor"
            class="size-[500px] absolute -left-80 opacity-25 text-soft-purple -z-10"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="m8.25 4.5 7.5 7.5-7.5 7.5"></path>
          </svg>
          <p class="xl:text-3xl lg:text-lg text-2xl md:px-4 px-2 xl:px-16 pb-8 lg:px-20 tracking-widest ">
            Somos una empresa contratista comprometida con el desarrollo
            sostenible y eficiente de cada proyecto. Durante nuestros once años
            de experiencia en el sector, hemos venido ofreciendo servicios
            innovadores, cumpliendo rigurosas normas y protocolos de seguridad.
          </p>
        </div>
        <div class="cyan flex flex-col items-start lg:px-24 pt-12 pb-8 h-fit px-8 justify-center">
          <h2 class="lg:text-4xl text-2xl font-bold text-white">INFRAESTRUCTURA</h2>
          <ul
            class="text-white lg:text-xl text-md flex flex-col gap-0 list-disc px-8 mt-4"
          >
            <li>Obras civiles, hidráulicas, sanitarias y viales.</li>
            <li>Movimientos de tierra y excavaciones</li>
            <li>Fabricación de estructuras metálicas</li>
            <li>Montajes industriales</li>
            <li>Trabajos en altura</li>
            <li>Gestión integral de proyectos</li>
          </ul>
          <div class="w-full flex flex-row items-center justify-end mt-8">
            <a
              href={"/galeria/infraestructura"}
              class="bg-white rounded-full text-black lg:w-64 w-48 lg:text-2xl text-xl flex flex-row items-center justify-end p-2 text-end"
              >Conocer más<span
                class="text-white deep-blue ml-2 rounded-full flex flex-col items-center justify-center"
                ><svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width={2}
                  stroke="currentColor"
                  class="size-8"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="m8.25 4.5 7.5 7.5-7.5 7.5"></path>
                </svg>
              </span></a
            >
          </div>
        </div>
      </div>
      <div class="lg:col-span-2 md:col-span-2 lg:block md:block hidden relative">
        <img
          src={infraestructura}
          alt="Infraestructura"
          class="object-cover h-full object-center"
        />
      </div>
    </section>

    <Card
      reversed={false}
      title="GEOTECNIA"
      list={[
        "Mejora de suelos",
        "Estabilización y protección de taludes",
        "Cimentaciones profundas",
        "Anclajes postensados",
        "Estabilidad de excavaciones superficiales",
      ]}
      clases="deep-purple"
      link="geotecnia"
      image={geotecnia}
    />
    <Card
      reversed={true}
      title="MANTENIMIENTO"
      list={[
        "Pintado de estructuras",
        "Habilitación y montaje de tuberías de HDPE",
        "Vías de acceso",
        "Faja transportadora",
        "Canales de coronación",
        "Traslado de materiales con equipos propios",
      ]}
      image={mantenimiento}
      link="mantenimiento"
      clases="soft-purple"
    />
    <Card
      reversed={false}
      title="ALQUILER DE EQUIPOS"
      list={[
        "Camiones grúa: 12Tn; 20 Tn; 32 Tn.",
        "Retroexacadoras John Deere",
        "Minicargadores",
        "Camiones Volquete",
        "Torres de Iluminación",
        "Grupos electrógenos",
      ]}
      image={alquiler}
      link="alquiler"
      clases="cyan mb-64"
    />
    <div class="absolute bottom-0 w-dvw left-0 -z-10">
      <section class="relative">
        <img src={bgImgae} alt="FONDO TRABAJADORES" class="bottom-0 w-full" />

        <span
          class="absolute inset-0 bg-gradient-to-t from-transparent to-[#102636] z-10"
        ></span>
      </section>
    </div>
  </section>
</Layout>
