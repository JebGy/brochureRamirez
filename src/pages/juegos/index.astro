---
import Layout from "../../layouts/Layout.astro";
---

<Layout>
  <main
    class="min-h-screen deep-blue flex flex-col items-center justify-center p-8"
  >
    <div class="max-w-6xl mx-auto text-center">
      <h1
        class="text-5xl md:text-7xl font-bold text-white mb-4"
        style="font-family: 'altone-bold', sans-serif;"
      >
        JUEGOS
      </h1>
      <p
        class="text-xl text-white mb-16 opacity-80"
        style="font-family: 'aileron-light', sans-serif;"
      >
        Selecciona tu juego favorito
      </p>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-4xl mx-auto">
        <!-- Ruleta -->
        <div
          class="group cursor-pointer transform transition-all duration-300 hover:scale-105"
        >
          <div
            class="deep-purple rounded-2xl p-8 shadow-2xl hover:shadow-3xl transition-all duration-300"
          >
            <div
              class="w-24 h-24 mx-auto mb-6 bg-white rounded-full flex items-center justify-center"
            >
              <svg
                class="w-12 h-12 text-purple-600"
                fill="currentColor"
                viewBox="0 0 24 24"
              >
                <circle
                  cx="12"
                  cy="12"
                  r="10"
                  stroke="currentColor"
                  stroke-width="2"
                  fill="none"></circle>
                <path d="M12 2 L12 12 L18 8 Z" fill="currentColor"></path>
                <path
                  d="M12 12 L22 12 L18 18 Z"
                  fill="currentColor"
                  opacity="0.7"></path>
                <path
                  d="M12 12 L12 22 L6 18 Z"
                  fill="currentColor"
                  opacity="0.5"></path>
                <path d="M12 12 L2 12 L6 6 Z" fill="currentColor" opacity="0.3"
                ></path>
              </svg>
            </div>
            <h3
              class="text-2xl font-bold text-white mb-4"
              style="font-family: 'altone-bold', sans-serif;"
            >
              RULETA
            </h3>
            <p
              class="text-white opacity-90 mb-6"
              style="font-family: 'aileron-light', sans-serif;"
            >
              Gira la ruleta y descubre tu premio
            </p>
            <a
              href="/juegos/ruleta"
              class="bg-white text-purple-600 px-6 py-3 rounded-full font-bold hover:bg-gray-100 transition-colors duration-300"
              style="font-family: 'altone-regular', sans-serif;"
            >
              JUGAR
            </a>
          </div>
        </div>

        <!-- Rompecabezas -->
        <div
          class="group cursor-pointer transform transition-all duration-300 hover:scale-105"
        >
          <div
            class="cyan rounded-2xl p-8 shadow-2xl hover:shadow-3xl transition-all duration-300"
          >
            <div
              class="w-24 h-24 mx-auto mb-6 bg-white rounded-full flex items-center justify-center"
            >
              <svg
                class="w-12 h-12 text-teal-600"
                fill="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  d="M3 3h6v6H3V3zm0 8h6v6H3v-6zm8-8h6v6h-6V3zm0 8h6v6h-6v-6z"
                  opacity="0.8"></path>
                <path d="M15 15h6v6h-6v-6z" opacity="0.6"></path>
                <path
                  d="M3 17h2v2H3v-2zm4 0h2v2H7v-2zm8-8h2v2h-2V9zm4 0h2v2h-2V9z"
                  fill="white"></path>
              </svg>
            </div>
            <h3
              class="text-2xl font-bold text-white mb-4"
              style="font-family: 'altone-bold', sans-serif;"
            >
              ROMPECABEZAS
            </h3>
            <p
              class="text-white opacity-90 mb-6"
              style="font-family: 'aileron-light', sans-serif;"
            >
              Resuelve el puzzle y completa la imagen
            </p>
            <a
              href="/juegos/rompecabeza"
              class="bg-white text-teal-600 px-6 py-3 rounded-full font-bold hover:bg-gray-100 transition-colors duration-300"
              style="font-family: 'altone-regular', sans-serif;"
            >
              JUGAR
            </a>
          </div>
        </div>

        <!-- Laberinto -->
        <div
          class="group cursor-pointer transform transition-all duration-300 hover:scale-105"
        >
          <div
            class="soft-purple rounded-2xl p-8 shadow-2xl hover:shadow-3xl transition-all duration-300"
          >
            <div
              class="w-24 h-24 mx-auto mb-6 bg-white rounded-full flex items-center justify-center"
            >
              <svg
                class="w-12 h-12 text-blue-600"
                fill="currentColor"
                viewBox="0 0 24 24"
              >
                <path d="M2 2h20v20H2V2zm2 2v16h16V4H4z"></path>
                <path d="M6 6h2v2H6V6zm4 0h2v2h-2V6zm4 0h2v2h-2V6z"></path>
                <path d="M6 10h2v2H6v-2zm8 0h2v2h-2v-2z"></path>
                <path d="M6 14h2v2H6v-2zm4 0h2v2h-2v-2zm4 0h2v2h-2v-2z"></path>
                <path d="M10 18h2v2h-2v-2z"></path>
                <circle cx="19" cy="19" r="1" fill="red"></circle>
                <circle cx="5" cy="5" r="1" fill="green"></circle>
              </svg>
            </div>
            <h3
              class="text-2xl font-bold text-white mb-4"
              style="font-family: 'altone-bold', sans-serif;"
            >
              LABERINTO
            </h3>
            <p
              class="text-white opacity-90 mb-6"
              style="font-family: 'aileron-light', sans-serif;"
            >
              Encuentra la salida del laberinto
            </p>
            <a
              class="bg-white text-blue-600 px-6 py-3 rounded-full font-bold hover:bg-gray-100 transition-colors duration-300"
              style="font-family: 'altone-regular', sans-serif;"
            >
              JUGAR
            </a>
          </div>
        </div>
      </div>

      <!-- BotÃ³n de regreso -->
      <div class="mt-16">
        <a
          href="/"
          class="inline-flex items-center text-white hover:text-cyan transition-colors duration-300"
          style="font-family: 'altone-regular', sans-serif;"
        >
          <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
            <path d="M19 12H5m7-7l-7 7 7 7"></path>
          </svg>
          Volver al inicio
        </a>
      </div>
    </div>
  </main>
</Layout>
