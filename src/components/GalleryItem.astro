---
const { image, index, class: className = '' } = Astro.props;
---

<div 
  class={`gallery-item group cursor-pointer overflow-hidden rounded-lg shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:scale-105 ${className}`}
  data-src={image.src}
  data-alt={image.alt}
  data-title={image.title}
  onclick={`openModal(${index})`}
>
  <div class="relative aspect-square overflow-hidden">
    <img 
      src={image.src} 
      alt={image.alt}
      class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-110"
      loading="lazy"
    />
    
    <!-- Overlay con informaciÃ³n -->
    <div class="absolute inset-0 bg-gradient-to-t from-black via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
      <div class="absolute bottom-0 left-0 right-0 p-4">
        <h3 class="text-white font-bold text-lg Altone">{image.title}</h3>
        <p class="text-white opacity-80 text-sm mt-1">Click para ampliar</p>
      </div>
    </div>
    
    <!-- Icono de zoom -->
    <div class="absolute top-4 right-4 bg-white bg-opacity-20 rounded-full p-2 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
      <svg 
        xmlns="http://www.w3.org/2000/svg" 
        fill="none" 
        viewBox="0 0 24 24" 
        stroke-width="2" 
        stroke="currentColor" 
        class="w-5 h-5 text-white"
      >
        <path stroke-linecap="round" stroke-linejoin="round" d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607ZM13.5 10.5h-6m3-3v6" />
      </svg>
    </div>
  </div>
</div>